}

#line-chart
  height 550px

  .overlay
    fill none
    pointer-events all

  .line-historical_total
    fill none
    stroke orange
    stroke-width 2

  .line-wrapper-historical_total
    .line-point
      fill orange !important

  .line-current_total
    stroke $globe-link
    stroke-width 3
    fill none

  .line-wrapper-current_total
    .line-point
      fill $globe-link !important

  .line-current-total-fill
    fill $globe-link
    fill-opacity 0.2
  //   fill-opacity .2

  .hoverCircle
    stroke #fff
    stroke-width 4

  .circle-historical_total
    fill orange
    stroke #fff

  .circle-current_total
    fill $globe-link
    stroke #fff

  .x.axis
    .domain
      stroke none
    .tick line
      stroke $gray-light

  .y.axis
    .domain
      stroke $gray-light
    .tick line
      stroke $gray-light

#big-numbers
  height 300px
  display flex
  flex-direction column
  align-items center
  justify-content space-evenly

  .number__data
    color $offwhite
    width 100%
    // text-align center
    text-transform uppercase
    font-size 1.2em
    border-radius 25px
    display flex
    flex-direction column
    justify-content center
    align-items center

    &--1
      background #BE0712
    &--2
      background #FD8832
    &--3
      background #FDBF2D
      color $offblack

.pie__wrapper
  border-radius 25px
  border 5px solid #1B86A8
  padding 5px

  .pie__hed
    text-transform uppercase
    text-align center
    color #1B86A8

#pie-chart
  height 200px


.legend-text
  font-size 0.7em
  vertical-align text-top

.legend-box
  height 1em
  width @height
  border-radius 50%
  display inline-block
  margin-right .25em
  border 1.5px solid #ececec

  &-1
    background #1f77b4

  &-2
    background #ff7f0e

  &-3
    background #2ca02c

  &-4
    background #d62728

