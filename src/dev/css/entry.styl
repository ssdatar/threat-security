}

#line-chart
  height 550px

  .overlay
    fill none
    pointer-events all

  .line-historical_total
    fill none
    stroke orange
    stroke-width 2

  .line-wrapper-historical_total
    .line-point
      fill orange !important

  .line-current_total
    stroke $globe-link
    stroke-width 3
    fill none

  .line-wrapper-current_total
    .line-point
      fill $globe-link !important

  .line-current-total-fill
    fill $globe-link
    fill-opacity 0.2
  //   fill-opacity .2

  .hoverCircle
    stroke #fff
    stroke-width 4

  .circle-historical_total
    fill orange
    stroke #fff

  .circle-current_total
    fill $globe-link
    stroke #fff

